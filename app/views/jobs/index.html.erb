<% if @company %>
  All Jobs for <strong><%= @company.name %></strong>
<% else %>
  All Jobs
<% end %>

<ul>
<% @jobs.each do |job| %>
    <li>
      <p><%= link_to job.title, company_job_path(job.company, job) %> at <%= job.company.name %></p>
      <%= link_to "Edit Job", edit_company_job_path(job.company, job) %>
    </li>
<% end %>
</ul>
